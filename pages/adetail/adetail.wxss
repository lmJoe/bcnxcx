/* pages/detail/detail.wxss */
page{
  background-color: #F4F5F9;
  height: 100%;
}
#detail{
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
}
#detail .header{
  width: 100%;
  height: 200px;
  background-size: cover;
  background-position: center center;
}
#detail .header txv-video{
  width: 100%;
  height: 200px;
}
#detail .describe{
  background: #fff;
  padding: 0 15px;
  margin-bottom: 10px;
  border-bottom: 1px solid #eee;
}
#detail .describe .describe-title{
  height: 40px;
  line-height: 40px;
}
#detail .describe .describe-title .lives{
  font-size: 16px;
}
#detail .describe .describe-title .required{
  font-size: 12px;
  margin-left: 10px;
  color: #58bc58;
} 
#detail .describe .describe-class{
  height: 40px;

}
#detail .describe .describe-class .number{
  display: inline-block;
  width: 30%;
  font-size: 12px;
}
#detail .describe .describe-class .right .img,
#detail .describe .describe-class .subject .img,
#detail .describe .describe-class .number .img{
  width: 16px;
  height: 16px;
  vertical-align: top;
}
#detail .describe .describe-class .subject{
  display: inline-block;
  width: 40%;
  font-size: 12px;
}
#detail .describe .describe-class .right{
  float: right;
}
#detail .describe .describe-class .right .img{
  width: 14px;
  height: 14px;
  vertical-align: middle;
}
#detail .detitle{
  height: 40px;
  font-size: 14px;
  padding-left:15px;
  line-height: 40px;
  background:#fff;
  border-top: 1px solid #eee;
  position: relative;
}
#detail .detitle .classlist{
  font-size: 14px;
  color: #58bc58;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right:10px;
}
#detail .files{
  height: 50px;
  line-height: 50px;
  padding: 0 15px;
  background:#fff;
  font-size:14px ;
  border-top: 1px solid #eee;
}
#detail .files .down{
  float: right;
  line-height: 50px;
  font-size: 14px;
  color: #58bc58;
}
#detail .files .down .img{
  height: 16px;
  width: 16px;
  vertical-align:middle;
}
#detail .main{
  flex: 1;
  overflow-x: hidden;
  overflow-y: auto;
  border-top: 1px solid #eee;
  background:#fff;
  padding: 10px 15px;
}
#detail .main .mian-item{
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  color: #7E7D82;
}
#detail .main .main-item .document{
  display: inline-block;
  padding: 0 3px;
  height: 15px;
  text-align: center;
  border:1px solid #7E7D82;
  font-size: 12px;
  line-height: 15px;
  margin-right: 10px;
}
#detail .main .main-item .className{
  line-height: 40px;
  font-size: 14px;
  display: inline-block;
  width: 80%;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  vertical-align: middle;
}