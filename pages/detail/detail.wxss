/* pages/detail/detail.wxss */
page{
  background-color: #fff;
  height: 100%;
}
#detail{
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
}
#detail .header{
  width: 100%;
}
.collects{
  font-size: 12px;
  margin-left:5px
}
#detail .header txv-video{
  width: 100%;
  height: 200px;
}
.ql-video{
  width: 100%;
}
.sharebutton{
  width:14px;
  height:14px;
  padding:0px;
  margin:0px;
  line-height:14px;
  padding-left:0px;
  padding-right:0px;
  margin-left: 0px;
  margin-right: 0px;
}
#detail .describe{
  background: #fff;
  padding: 10px 15px;
  /* margin-bottom: 10px; */
  border-bottom: 1px solid #eee;
}
#detail .describe .describe-title{
  height: 40px;
  line-height: 40px;
}
#detail .describe .describe-title .lives{
  font-size: 16px;
}
#detail .describe .describe-title .required{
  font-size: 12px;
  margin-left: 10px;
  color: #58bc58;
} 
#detail .describe .describe-class{
  height: 40px;

}
 .describe-class .number{
  display: inline-block;
  font-size: 12px;
}
 .describe-class .right .img,
.describe-class .subject .img
{
  width: 16px;
  height: 16px;
  vertical-align: top;
}
 .describe-class .number .img{
  width: 30px;
  height: 30px;
  vertical-align: top;
  border-radius: 50%;
}
.describe-class .subject{
  display: inline-block;
  width: 40%;
  font-size: 12px;
}
.describe-class .right{
  float: right;
}
.describe-class .right .img{
  width: 18px;
  height: 18px;
  vertical-align: middle;
}
#detail .detitle{
  height: 40px;
  font-size: 14px;
  padding-left:15px;
  line-height: 40px;
  background:#fff;
  border-top: 1px solid #eee;
}
#detail .files{
  height: 50px;
  line-height: 50px;
  padding: 0 15px;
  background:#fff;
  font-size:14px ;
  border-top: 1px solid #eee;
}
#detail .files .down{
  float: right;
  line-height: 50px;
  font-size: 14px;
  color: #58bc58;
}
#detail .files .down .img{
  height: 16px;
  width: 16px;
  vertical-align:middle;
}
#detail .main{
  /* border-top: 1px solid #eee; */
  background:#fff;
  padding: 10px 15px;
}
#detail .main .mian-item{
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  color: #7E7D82;
}
#detail .main .main-item .document{
  display: inline-block;
  width: 28px;
  height: 15px;
  text-align: center;
  border:1px solid #7E7D82;
  font-size: 12px;
  line-height: 15px;
  margin-right: 10px;
}
#detail .main .main-item  .className{
  line-height: 40px;
  font-size: 14px;
}
.swiper image {
  width: 100%;
  height: auto;
}
.tags{
  font-size: 14px;
  margin-right:5px;
}
.comments{
  background-color: #fff;
  padding-bottom: 100px;
}
.commentavatar{
  width: 28px;
  border-radius: 100%;
  vertical-align: middle;
  margin-left: 15px;
}
.commentline{
  margin-top:6px
}
.commenttop{
  margin:0px 15px;
  padding:18px 0px;
  border-top: 1px solid #eee;
  font-size: 14px;
}
.commentnickname{
  vertical-align: middle;
  margin-left: 16px;
  font-size: 14px;
}
.commentadd{
  margin-top:20px;
  text-align: center;
  position: fixed;
  bottom: 0px;
  width: 100%;
  z-index: 100;
  background-color: #fff;
  /* margin: 0 auto; */
  
}
.commentinput{
  background-color: #eee;
  border-bottom-left-radius: 8px;
  border-top-left-radius: 8px;
  border-bottom-right-radius: 8px;
  border-top-right-radius: 8px;
  padding: 5px 10px;
  width: 70%;
  display: inline-block;
  margin: 0 auto;
  margin-bottom: 10px;
  /* margin-bottom: 20px; */
