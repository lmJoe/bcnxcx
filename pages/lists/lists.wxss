/* pages/list/list.wxss */
page{
  background-color: #F4F5F9;
}
#list .header{
  width: 100%;
  height: 200px;
  background-size: cover;
  background-position: center center;
}
#list .header .banner{
  width: 100%;
  height: 100%;
}
#list .top{
  height:80px;
  background:#fff;
  padding: 0 15px;
  margin-bottom: 20px;
  border-bottom: 1px solid #eee;
}
#list .top .title{
  height: 40px;
  box-sizing: border-box;
  line-height: 40px;
  font-size: 14px;
  border-bottom: 1px solid #eee;
}
#list .top .time{
  height: 40px;
  line-height: 40px;
  font-size: 12px;
  vertical-align: top;
}
#list .top .time .icon{
  width: 16px;
  height: 16px;
  margin-top:11px;
  margin-right:5px;
  vertical-align: top;
}
#list .mian{
  background: #fff;
  border-top: 1px solid #eee;
}
#list .mian .main-item{
  height: 80px;
  padding:10px 8px;
  overflow: hidden;
  border-bottom: 1px solid #eee;
}
#list .mian .main-item .item-img{
  /* width: 140px; */
  height:80px;
  margin-right: 10px;
  float: left;
}
#list .mian .main-item .item-img .img{
  width: 100%;
  height: 100%;
}
#list .mian .main-item .item-text{
  font-size: 12px;
  line-height: 80px;
  /* width: 170px; */
}
#list .mian .main-item .item-text view:nth-child(1){
  font-size: 12px;
}
#list .mian .main-item .item-text view:nth-child(2){
  font-size: 12px;
  color: #58bc58;
  line-height: 30px;
}
#list .mian .main-item .item-text view:nth-child(3){
  font-size: 12px;
  color: #ccc;
}
.chanetap{
  margin: 10px 20px;
}
.tapview{
  width: 50%;
  display: inline-block;
  text-align: center;
  height: 40px;
}
.changebtn{
  line-height: 40px;
  width:auto; display:inline-block !important; 
  margin: 0 auto;
}
.btnactive{
  font-weight: 600;
  border-bottom: 2px solid #333;
}
#list .infolist{
  min-height: 100px;
  
}
#list .infolist .info-box{
  background: #fff;
  padding:15px;
  margin-bottom: 10px;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
#list .infolist .info-box .info-name{
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  margin-bottom: 10px;
}
#list .infolist .info-box .info-name text{
  display: inline-block;
  height: 14px;width: 4px;
  border-radius:2px;
  margin-top:8px;
  background: #58bc58;
  vertical-align: top;
  margin-right: 10px;
}
#list .infolist .info-box .infos{
  overflow: hidden;
  padding: 10px 0;
}
#list .infolist .info-box .infos .infos-img{
  width: 140px;
  height: 80px;
  margin-right: 10px;
  float: left;
}
#list .infolist .info-box .infos .img{
  width: 100%;
  height: 100%;
}
#list .infolist .info-box .infos .infos-text{
  width: 170px;
  height: 80px;
  font-size: 12px;
  float: left;
}
#list .infolist .info-box .infos .infos-text text{
  display: block;
  line-height: 20px;
  color: #808492;
}
#list .infolist .info-box .infos .infos-text .title{
  font-size: 14px;
  color: #000;
}
