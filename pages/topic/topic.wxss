/* pages/list/list.wxss */
page{
  background-color: #F4F5F9;
}
#list{
  background: #fff;
}
#list .header{
  width: 100%;
  height: 200px;
  background-size: cover;
  background-position: center center;
}
#list .header .banner{
  width: 100%;
  height: 100%;
}
#list .top{
  height:80px;
  background:#fff;
  padding: 0 15px;
  margin-bottom: 20px;
  border-bottom: 1px solid #eee;
}
#list .top .title{
  height: 40px;
  box-sizing: border-box;
  line-height: 40px;
  font-size: 14px;
  border-bottom: 1px solid #eee;
}
#list .top .time{
  height: 40px;
  line-height: 40px;
  font-size: 12px;
  vertical-align: top;
}
#list .top .time .icon{
  width: 16px;
  height: 16px;
  margin-top:11px;
  margin-right:5px;
  vertical-align: top;
}
#list .mian{
  border-top: 1px solid #eee;
}
#list .mian .main-item{
  padding:8px;
  overflow: hidden;
  border-bottom: 1px solid #eee;
}
#list .mian .main-item .item-img{
  /* width: 140px; */
  margin-right: 10px;
  float: left;
}
#list .mian .main-item .item-img .img{
  width: 100%;
  height: 100%;
}
#list .mian .main-item .item-text{
  font-size: 12px;
  line-height: 30px;
  /* width: 170px; */
}
#list .mian .main-item .item-text view:nth-child(1){
  font-size: 12px;
}
#list .mian .main-item .item-text view:nth-child(2){
  font-size: 12px;
  color: #58bc58;
  line-height: 30px;
}
#list .mian .main-item .item-text view:nth-child(3){
  font-size: 12px;
  color: #ccc;
}
.topic_top{
  text-align: center;
  border-bottom: 1px solid #333;
  padding:10px;
}