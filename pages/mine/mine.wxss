/* pages/mine/mine.wxss */
page{
  background-color: #F4F5F9;
}
#mine .head{
  min-height: 120px;
  background: #fff;
  padding: 15px;
  margin-bottom: 10px;
  border-bottom: 1px solid #eee;
}
#mine .head .head-box{
  height:75px;
  box-shadow: 0 4px 12px rgba(0,0,0,.2);
  padding:20px 20px;
  border-radius: 4px;
}
#mine .head .head-box .img{
  width: 60px;
  height: 60px;
  border-radius:50%;
  vertical-align: top;
}
#mine .head .head-box .head-username{
  vertical-align: top;
  margin-left: 20px;
  font-size: 18px;
  line-height: 40px;
}
#mine .head .head-box .haed-text{
  height: 50px;
  margin-top:15px;
}
#mine .head .head-box .head-item{
  display: inline-block;
  width: 33%;
  box-sizing: border-box;
  text-align: center;
}
#mine .head .head-box .dis{
  display: inline-block;
  width: 1px;
  height:26px;
  margin-top: 12px;
  background: #eee;
}
#mine .head .head-box .head-item text{
  display: block;
  font-size: 12px;
}
#mine .head .head-box .head-item text:nth-child(1){
  margin-bottom: 5px;
  font-size: 15px;
}
#mine .funs-box{
  background: #fff;
  margin-bottom: 10px;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
#mine .funs-box .funs-item{
  height: 50px;
  border-bottom:1px solid #eee;
  padding: 0 15px;
}
#mine .funs-box .funs-item .funs-left{
  float: left;
}
#mine .funs-box .funs-item .funs-left .img{
  width:22px;
  margin-top: 15px;
  margin-right: 10px;
  vertical-align: top;
}
#mine .funs-box .funs-item .funs-left .title{
  line-height: 50px;
  font-size: 14px;
  vertical-align: middle;
}
#mine .funs-box .funs-item .funs-right{
  width:15px;
  height: 15px;
  margin-top: 17px;
  float: right;
}
#mine .outlogin{
  width: 100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 14px;
  background: #fff;
  margin-bottom: 10px;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
.userinfo {  
  position: relative;  
  width: 750rpx;  
  height: 320rpx;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  
  
.userinfo{  
  /* color: #fff; */  
  font-size: 14px;  
  background-color: #fff;  
}